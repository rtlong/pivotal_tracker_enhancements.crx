{
  "manifest_version": 2,

  "name": "Pivotal Tracker Enhancements",
  "description": "Adds some extra functionality to the Tracker UI.",
  "version": "1.3",
  "update_url": "https://raw.github.com/rtlong/pivotal_tracker_enhancements.crx/master/updates.xml",

  "content_scripts": [
    {
      "matches": ["https://www.pivotaltracker.com/*"],
      "js": [
        "zepto.js",
        "main.js"
      ]
    }
  ],

  "permissions": [
    "https://www.pivotaltracker.com/*"
  ]
}
